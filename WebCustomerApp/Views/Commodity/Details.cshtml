@using Model.ViewModels.CommodityViewModels;
@model CommodityViewModel


        <div class="container">

            <h1>All commodity </h1>

            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="col-md-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col" class="col-md-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th scope="col" class="col-md-3"></th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Price)
                        </td>
                        <a asp-action="AddPhoto" asp-controller="Photo" asp-route-commodityId="@Model.Id">
                            @if (Model.Photo != null)
                            {
                                <img class="logo" src=@Model.Photo alt="logo" />
                            }
                            else
                            {
                                <img class="logo" src="~/images/40.png" alt="Placeholder" />
                            }
                        </a>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </tr>

                </tbody>
            </table>

        </div>
