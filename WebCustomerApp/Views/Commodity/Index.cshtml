@using Model.ViewModels.CommodityViewModels;
@model IEnumerable<CommodityViewModel>
@{
<div class="container">

    <h1>Your commodity list</h1>
    <p>
        <a class="btn btn-success" asp-action="AddCommodity"><em class="glyphicon glyphicon-plus"></em>Add</a>
    </p>
   
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="col-md-3">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col" class="col-md-3">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th scope="col" class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>                  
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><em class="glyphicon glyphicon-edit"></em></a> |
                        <a class="btn btn-danger" asp-action="DeleteConfirmed" asp-route-Id="@item.Id"><em class="glyphicon glyphicon-trash"></em></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


}
