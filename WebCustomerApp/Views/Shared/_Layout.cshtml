<body id="menu" class="hold-transition skin-black sidebar-collapse sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <span class="logo-mini"><strong>SMS</strong></span>
                <span class="logo-lg"><strong>SMS</strong>Service</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown notifications-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" onclick="onNotificationsOpened(); fillReport();">
                                    <em class="fa fa-bell-o"></em>
                                    <span class="label label-warning" id="notificationBadge"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li id="notificationMenu">
                                    </li>
                                    <li class="footer"><a role="button" data-toggle="modal" data-target="#notificationModal" onclick="fillModal();">View all</a></li>
                                </ul>
                            </li>
                        }
                       
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <em class="fa fa-user"></em>
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="user-header">
                                        <p>
                                            @Context.User.Identity.Name
                                        </p>
                                    </li>
                                }
                                <li class="user-footer">
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                            <div class="pull-left">
                                                <a asp-controller="Manage" asp-action="Index" class="btn btn-primary"><span class="fa fa-user"></span>Profile</a>
                                            </div>
                                            <div class="pull-right">
                                                <button type="submit" class="btn btn-primary"><span class="fa fa-sign-out"></span>Sign out</button>
                                            </div>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="pull-left">
                                            <a asp-controller="Account" asp-action="NewLogin" class="btn btn-primary"><span class="fa fa-sign-in"></span>Sign in</a>
                                        </div>
                                        <div class="pull-right">
                                            <a asp-controller="Account" asp-action="NewRegister" class="btn btn-primary"><span class="fa fa-registered"></span> Register</a>
                                        </div>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree">
