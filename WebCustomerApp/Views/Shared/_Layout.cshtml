                                <em class="fa fa-address-book-o"></em> <span>Contacts</span>
                                <span class="pull-right-container"> </span>
                            </a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-area="" asp-controller="Operator" asp-action="Operators">
                                <em class="fa fa-money"></em> <span>Operators</span>
                                <span class="pull-right-container"> </span>
                            </a>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <em class="fa fa-stop"></em> <span>Moderator</span>
                                <span class="pull-right-container">
                                    <em class="fa fa-angle-left pull-right"></em>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a asp-controller="Moderator" asp-action="Create"><em class="fa fa-plus-circle"></em>Create</a></li>
                                <li><a asp-controller="Moderator" asp-action="Index"><em class="fa fa-list-ul"></em>List moderators</a></li>
                            </ul>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="AdminStatistic" asp-action="AdminStatistics">
                                <em class="fa fa-bar-chart"></em> <span>Statistic</span>
                                <span class="pull-right-container"> </span>
                            </a>
                        </li>

                    }
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Moderator")|| User.IsInRole("Admin")))
                    {
                        <li class="treeview">
                            <a href="#">
                                <em class="fa fa-users"></em> <span>Commodity</span>
