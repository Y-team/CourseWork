@using Model.ViewModels.BasketViewModels;
@model BasketCommoditiesUserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<div class="container">

    <h1>Your Basket </h1>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="col-md-3">
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th scope="col" class="col-md-3">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th scope="col" class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
             
            @foreach (var item in Model.CommodityUser)
            {
            <tr>
                <td>
                    <a asp-action="AddPhoto" asp-controller="Photo" asp-route-commodityId="@item.Id">
                        @if (item.PhotoName != null)
                        {
                            <img class="logo basket-paint" src=@item.PhotoName alt="logo" />
                        }
                        else
                        { 
                            <img class="logo basket-paint" src="~/images/43.png" alt="Placeholder" />
                        }
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                
                <td>
                    @*<a class="btn btn-warning" asp-action="Clean" asp-controller="Basket" asp-route-basketId=""><em>Details</em></a> |*@
                    <a class="btn btn-warning" asp-action="Remove" asp-route-id="@item.Id"><em class="glyphicon glyphicon-trash"></em></a> |
                    <a class="btn btn-danger" asp-action="DeleteConfirmed" asp-route-Id="@item.Id"><em class="glyphicon glyphicon-trash"></em></a>
                </td>
            </tr>
               
            }
        </tbody>
    </table>

</div>
