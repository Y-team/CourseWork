@using Model.ViewModels.CommodityViewModels;
@model IEnumerable< CommodityViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<div class="container">
    <h2>Basket User</h2>
   

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>

                <th scope="col" class="col-md-4"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><em class="glyphicon glyphicon-edit"></em></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><em class="glyphicon glyphicon-trash"></em></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
