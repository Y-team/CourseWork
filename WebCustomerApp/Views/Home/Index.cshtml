<body>
    <div class="preview" id="page_preloader">

        <h1 class="loader" onload='StartPage()' id="text_preloader">Sms service</h1>
        <!-- <a class="skip_button" id="skip_button" href="#">Skip</button> -->
    </div>
    <header class="header">
        <a href="#" class="logo">
            <img src="../images/landing/logo.svg" alt="logo unload" class="logo_img">
        </a>

        <nav class="menu">
            <ul class="menu_list">
                <li class="menu_item">
                    <div class="container">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">

                        </a>
                        <div id="myNav" class="overlay">
                            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                            <div class="overlay-content">
                                <a asp-area="" asp-controller="Company" asp-action="Index">Company</a>
                                <a asp-area="" asp-controller="Contact" asp-action="Contacts">Contacts</a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-area="" asp-controller="Operator" asp-action="Operators">Operators</a>
                                    <a asp-area="" asp-controller="StopWord" asp-action="Index">Stop Words</a>
                                }
                                @if (User.Identity.IsAuthenticated && User.IsInRole("CorporateUser"))
                                {
                                    <a asp-area="" asp-controller="Group" asp-action="Index">Group</a>
                                }
                                @await Html.PartialAsync("_LoginPartial")
                            </div>
                        </div>
                        <span class="main__menu" cursor:pointer" onclick="openNav() ">&#9776;</span>
                        </div>
                </li>
            </ul>
        </nav>
       
